<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/homescreen_titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#359BF5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="0"
                android:contentDescription="profile_image"
                android:padding="8dp"
                android:src="@drawable/oval_72_copy_3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="12dp"
                    android:text="Ram Singh"
                    android:textColor="#fff"
                    android:textSize="24sp"
                    app:fontFamily="@font/roboto_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="SHO - Gwalior"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    app:fontFamily="@font/roboto_bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:clickable="true"
                android:onClick="underDev"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:src="@drawable/ic_search" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:clickable="true"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp"
                android:src="@drawable/vertical_dots" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/unallocated_cases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homescreen_titlebar"
            android:layout_marginTop="4dp"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="responderForm"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:padding="8dp"
                android:src="@drawable/warn" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="Unallocated Cases"
                android:textColor="#000"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/uc" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/response_domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/unallocated_cases"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="caseTimeline"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:padding="8dp"
                android:src="@drawable/ic_notifications" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="Response Domain"
                android:textColor="#000"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/rd" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/investigation_domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/response_domain"
            android:background="@drawable/border"
            android:clickable="true"
            android:onClick="underDev"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:padding="8dp"
                android:src="@drawable/invest_dom" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="Investigation Domain"
                android:textColor="#000"
                android:textSize="18sp"
                app:fontFamily="@font/roboto_bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/idn" />

        </LinearLayout>

        <TextView
            android:id="@+id/other_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/investigation_domain"
            android:layout_margin="16dp"
            android:text="OTHER OPTIONS"
            android:textColor="#696C70"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/HS_icon_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/other_options"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="underDev"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/train_eta" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Train ETA"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="underDev"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/wip" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="WIP"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="underDev"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/closed_cases" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Closed Cases"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="underDev"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/recent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Recent"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@id/HS_icon_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/HS_icon_row1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="underDev"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/feedbacks" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Feedbacks"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="underDev"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/rewards" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Rewards"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="staffList"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/staff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Staff"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="underDev"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:padding="8dp"
                    android:src="@drawable/add_new" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Add New"
                    android:textAlignment="center"
                    android:textColor="#696C70"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/tag_change"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:src="@drawable/tag_change"
            android:layout_below="@+id/HS_icon_row2"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/imp_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tag_change"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:text="IMPORTANT TAGS"
            android:textColor="#696C70"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/tags_row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imp_tags"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/tag_border"
                android:clickable="true"
                android:onClick="underDev"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Hospitals"
                android:textAlignment="center"
                android:textColor="#359BF5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/tag_border"
                android:clickable="true"
                android:onClick="underDev"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Hotels"
                android:textAlignment="center"
                android:textColor="#359BF5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/tag_border"
                android:clickable="true"
                android:onClick="underDev"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Hawkers"
                android:textAlignment="center"
                android:textColor="#359BF5"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tags_row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tags_row1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/tag_border"
                android:clickable="true"
                android:onClick="underDev"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Railway Staff"
                android:textAlignment="center"
                android:textColor="#359BF5"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@drawable/tag_border"
                android:clickable="true"
                android:onClick="underDev"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="Vendors"
                android:textAlignment="center"
                android:textColor="#359BF5"
                android:textSize="16sp" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>